# Single Page Application Redirects for AI Trading 2.0
# All routes should serve the index.html for client-side routing

# Static assets - serve directly
/css/*  /css/:splat  200
/js/*   /js/:splat   200  
/assets/* /assets/:splat 200
/pages/* /pages/:splat 200

# API calls - proxy to backend
/api/* https://backend-kzbh2zv05-paolos-projects-dc6990da.vercel.app/api/:splat 200

# MT5 API calls - proxy to MT5 server
/mt5/* http://154.61.187.189:8080/:splat 200

# Main application pages - serve index.html for SPA routing
/dashboard /pages/dashboard.html 200
/trade /pages/trade.html 200  
/mldashboard /pages/mldashboard.html 200
/login /pages/login.html 200
/register /pages/register.html 200
/settings /pages/settings.html 200

# Fallback - serve index.html for all other routes (SPA catch-all)
/* /index.html 200